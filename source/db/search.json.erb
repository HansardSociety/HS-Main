<%
childPages = data.hs.child_page
landingPages = data.hs.landing_page
allPages = childPages.merge(landingPages)

db = allPages.map do |id, page|
  {
    "objectID": page.ID,
    "title": page.title,
    "date": page.date_time.integer.to_i,
    "slug": page.slug,
    "category": page.category,
    "sub_category": (page.sub_category if page.sub_category),
    "description": page.introduction,
    "image": page.banner_image.url,
    "tags": (page.tags.map{ |tag| tag } if page.tags)
  }.compact
end

dbDescending = db.sort_by{ |page| - page[:date] }
%>

<%= dbDescending.to_json %>
