button.button(
  class="js-#{ button_scope }-trigger"
  role="button"
  id="#{ aria_id.downcase }"
  aria-controls="#{ aria_target_id.downcase }"
  data-change-state="#{ js_change_state.downcase.gsub(' ','-') }"
)

  - if button_type != 'menu'
    span(aria-hidden="true"
         class="button__#{ button_type }")
      = yield
  - else
    span(aria-hidden="true"
         class="button__#{ button_type }")
