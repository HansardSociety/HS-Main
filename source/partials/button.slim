button.button{
  class="#{ 'button--' + type if type != nil }"
  class="#{ 'button--' + size }"
  class="js-trigger-#{ scope }"
  class="#{ 'js-trigger-exclusive' if exclusive }"
  data-change-state="#{ js_change_state.parameterize }"
  aria-controls="#{ aria_target_id.parameterize }"
  role="button"
  id="#{ aria_id.parameterize }"
}

  - if icon == 'menu'
    span{
      aria-hidden="true"
      class="button__#{ icon }"
    }

  - else
    span.button__content{
      aria-hidden="true"
      class="#{ 'button__content--' + animation if animation != nil }"
    }

      / Icon
      - if icon != nil
        = partial 'partials/icon',
          :locals => { :icon => icon,
                       :color => color,
                       :size => size }

      - if text != nil
        / - text.each do |content|
        span.button__text{
          data-on-content="#{ text[ :on ] }"
          data-off-content="#{ text[ :off ] }"
        }
