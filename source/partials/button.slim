button.button{
  class="#{ 'button--' + type if type != nil }"
  class="#{ 'button--' + size }"
  class="js-trigger-#{ scope }"
  class="#{ 'js-trigger-exclusive' if exclusive }"
  role="button"
  id="#{ aria_id.parameterize }"
  aria-controls="#{ aria_target_id.parameterize }"
  data-change-state="#{ js_change_state.parameterize }"
}

  - if icon == 'menu'
    span{
      aria-hidden="true"
      class="button__#{ icon }"
    }

  - else
    span.button__animation{
      aria-hidden="true"
      class="button__animation--#{ animation }"
    }

      / Icon
      - if icon != nil
        = partial 'partials/icon',
          :locals => { :icon => icon,
                       :color => color,
                       :size => size }

      - if text != nil
        span.button__text= text
