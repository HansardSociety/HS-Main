<%
chartData = local_data[:chart_data]
isDev = false
# isDev = true
%>
<script class="chart__config" type="application/json">
<% if isDev %>


{
  "type": "doughnut",
  "data": {
    "datasets": [{
      "data": [32, 3],
      "label": "Coronavirus SIs",
      "datasetID": "coronavirus-sis"
    }],
    "labels": ["Made Negative", "Made Affirmative"]
  },
  "options": {
    "aspectRatio": 1
  },
  "customConfig": {
    "colors": [{
      "palette": ["#04655a", "#80557d"],
      "datasetIDs": ["coronavirus-sis"]
    }],
    "annotations": [{
      "type": "percentageValueLabel",
      "fontSize": "medium",
      "fontColor": "white",
      "datasetIDs": ["coronavirus-sis"]
    }]
  }
}


<% else %>
{
  "type": "<%= chartData[:chart_type] %>",
  "data": {
    "datasets": <%= chartData[:chart_datasets] %>,
    "labels": <%= chartData[:chart_labels] %>
  },
  "options": <%= chartData[:chart_options] %>,
  "customConfig": <%= chartData[:chart_custom_config] %>
}
<% end %>
</script>
