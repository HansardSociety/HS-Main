<%
chartData = local_data[:chart_data]
isDev = false
%>
<script class="chart__config" type="application/json">
<% if isDev %>
{
  "type": "doughnut",
  "data": {
    "datasets": [{
      "data": [
        127,
        368
      ],
      "label": "System of governing",
      "datasetID": "system-of-governing"
    }],
    "labels": [
      "Could be improved quite a lot / a great deal",
      "Could not be improved / improved in small ways"
    ]
  },
  "options": {
    "aspectRatio": 1
  },
  "customConfig": {
    "colors": [{
      "palette": [
        "#d3d3d3",
        "#e85037"
      ],
      "datasetIDs": [
        "system-of-governing"
      ]
    }],
    "annotations": [{
      "fontSize": "large",
      "fontColor": "white",
      "datasetIDs": [
        "system-of-governing"
      ]
    }]
  }
}
<% else %>
{
  "type": "<%= chartData[:chart_type] %>",
  "data": {
    "datasets": <%= chartData[:chart_datasets] %>,
    "labels": <%= chartData[:chart_labels] %>
  },
  "options": <%= chartData[:chart_options] %>,
  "customConfig": <%= chartData[:chart_custom_config] %>
}
<% end %>
</script>
