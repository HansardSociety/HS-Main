<%
chartData = local_data[:chart_data]
isDev = false
isDev = true
%>
<script class="chart__config" type="application/json">
<% if isDev %>
{
  "type": "doughnut",
  "data": {
    "datasets": [
      {
        "data": [
          50,
          42,
          8
        ],
        "label": "Brexit SIs",
        "datasetID": "ds-01"
      }
    ],
    "labels": ["hello", "world", "Don't know"]
  },
  "options": {
    "aspectRatio": 1
  },
  "customConfig": {
    "colors": [
      {
        "palette": [
          "#04655a",
          "#B0B0B0"
        ],
        "datasetIDs": [
          "ds-01"
        ]
      }
    ],
    "annotations": [
      {
        "fontSize": "medium",
        "fontColor": "white",
        "datasetIDs": [
          "ds-01"
        ]
      }
    ]
  }
}

<% else %>
{
  "type": "<%= chartData[:chart_type] %>",
  "data": {
    "datasets": <%= chartData[:chart_datasets] %>,
    "labels": <%= chartData[:chart_labels] %>
  },
  "options": <%= chartData[:chart_options] %>,
  "customConfig": <%= chartData[:chart_custom_config] %>
}
<% end %>
</script>
