<%
panelData = local_data[:entry_data]

bgc = panelData[:background_color]
title = panelData[:title]
copy = panelData[:copy]
callsToAction = panelData[:calls_to_action]
%>

<section
  class="panel
        <%= colorProfile(:greyscale).include?(bgc) ?
            panelBgc(bgc) :
            panelBgc(bgc, { gradient: true }) %>">

  <div class="panel__content panel__content--narrow">
    <h3 class="title-xxl e-align-cen"><%= title %></h3>
  </div>

  <% if callsToAction %>
    <div class="panel__content panel__content--narrow e-mgn-t-md">
      <div class="grid grid--xs grid--center">
        <% callsToAction.each do |cta| %>
          <div class="grid__cell">
            <% if cta[:TYPE] == "cta_download" %>
              <%= partial "views/partials/btn",
                locals: { local_data: {
                  type: "link",
                  size: "md", style: "primary",
                  label: cta[:button_text],
                  label_size: "md",
                  url: cta[:file].url }} %>
            <% end %>
          </div>
        <% end %>
      </div>
    </div>
  <% end %>
</section>
