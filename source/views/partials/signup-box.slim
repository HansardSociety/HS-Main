- @copy_size = local_data[:copy_size]
- @btn_size = local_data[:btn_size]

h2.title-lg.e-mgn-b-sm Join our newsletter
p.e-mgn-b-sm{ class="strap-#{ @copy_size }" }= siteData(:newsletter_text)
= partial "views/partials/btn",
  locals: { local_data: \
    { type: "state", switch: true,
      size: "md", style: "primary",
      label_on: "Subscribe now", label_off: "Close", label_size: "md",
      page: "no-scroll",
      aria_id: "activate-modal-monthly-newsletter-subscription",
      aria_target_id: "modal-monthly-newsletter-subscription",
      iframe: true }}
