- profileData = local_data[:profile_data]
- actions = local_data[:actions]

- ctaID = profileData[:cta_id]
- biog = profileData[:biog]
- email = profileData[:email]
- fullName = profileData[:full_name]
- linkedIn = profileData[:linkedin]
- organisation = profileData[:organisation]
- photo = profileData[:photo]
- role = profileData[:role]
- tel = profileData[:tel]
- twitter = profileData[:twitter]

.profile
  .profile__image
    img{
      src="#{ photo[:url] }?fit=fill&w=324&h=324"
      alt="#{ photo[:alt] }"
    }

  .profile__main
    h1.title-sm.e-col-white= fullName
    p.strap-xs.e-col-white= role + (organisation ? "," : "")
    - if organisation
      p.strap-xs.e-col-white= organisation

  - if (biog || twitter || linkedIn) && actions != false
    .profile__actions
      .grid.grid--xxs

        / Biog
        - if biog
          .grid__cell.grid__cell--xxs

            / Button
            = partial "views/partials/btn",
              locals: { local_data: \
                { type: "state", switch: true,
                  size: "sm",
                  style: "secondary",
                  label_on: "Show biog", label_off: "Close", label_size: "sm",
                  page: "no-scroll", exclusive: true,
                  aria_id: "activate-#{ ctaID }",
                  aria_target_id: ctaID }}

            / Modal
            = partial "views/partials/modal",
              locals: { local_data: \
                { id: ctaID,
                  content: biog }}

        / Social
        = partial "views/partials/social",
          locals: { local_data: \
            { icons: [email, twitter, linkedIn] }}
