<%
entryData = local_data[:entry_data]
%>

<header
  class="banner JS-banner--semi"
  style="height: 80vh">

  <%= partial "views/partials/banner/image",
    locals: { local_data: {
      entry_data: entryData }} %>

  <div class="banner__inner banner__inner--cp">
    <div class="banner__content banner__content--cp">
      <div class="grid grid--md">
        <div class="grid__cell grid__cell--md-above-md-7">
          <span class="label-xs e-mgn-b-xs e-pad-y-xs e-pad-x-xxs e-acc-<%= catColor(entryData[:category]) %>-2 e-col-greyscale-0"><%= entryData[:meta_label] %></span>
          <h1 class="banner__title title-lg"><%= entryData[:title] %></h1>
        </div>
      <div class="grid__cell grid__cell--md-above-md-5 grid__cell--end">
        <div class="grid grid--xxs grid--middle">
          <div class="grid__cell grid__cell--xxs-12 label-xs">Share this</div>
          <%= partial "views/partials/social",
            locals: { local_data: {
              icons: [
                "https://twitter.com/intent/tweet?text=#{ entryData[:title] }&url=https://hansardsociety.org.uk/#{ entryData[:slug] }&via=HansardSociety&related=HansardSociety",
                "https://facebook.com/sharer.php?u=https://hansardsociety.org.uk/#{ entryData[:slug] }",
                "https://www.linkedin.com/shareArticle?mini=true&url=https://hansardsociety.org.uk/#{ entryData[:slug] }&title=#{ entryData[:title] }&summary=#{ entryData[:introduction] }&source=hansardsociety.org.uk"
              ]}} %>
        </div>
      </div>
    </div>
</header>
