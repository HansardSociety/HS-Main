<%
entryData = local_data[:entry_data]
%>

<header class="banner JS-banner--full">
  <div class="carousel">
    <div class="carousel__inner carousel__inner--banner">
      <div class="carousel__item carousel__item--banner" style="height: 90vh;">
        <%= partial "views/partials/banner/image",
          locals: { local_data: {
            entry_data: entryData }} %>

        <div class="banner__inner banner__inner--lp">
          <div class="banner__content banner__content--lp">

            <h1 class="e-hidden"><%= "#{ @entry[:title] } - #{ @entry[:seo_title_keywords] }" %></h1>
            <p class="banner__title banner__title--main title-xl e-fz-lg"><%= entryData[:subtitle] %></p>
            <!--
            <div class="grid grid--xxs grid--above-sm-center e-mgn-t-sm">
              <%= partial "views/partials/social",
                locals: { local_data: {
                  icons: [
                    siteData(:twitter),
                    siteData(:linkedin),
                    siteData(:facebook)]}} %>
            </div>
            -->

            <div class="banner__down-arr">
              <%= partial "views/partials/icon",
                locals: {
                  icon: "ios-arrow-thin-down",
                  size: "sm" } %>
            </div>
          </div>
        </div>
      </div>

      <% entryData[:featured_pages].each_with_index do |page, index| %>
        <article class="carousel__item carousel__item--banner" style="height: 100vh; opacity: 0;">
          <%= partial "views/partials/banner/image",
            locals: { local_data: {
              entry_data: page }} %>
          <div class="banner__inner banner__inner--lp">
            <div class="banner__content banner__content--lp">

              <span class="label-xxs label-tag e-acc-<%= catColor(page[:category]) %>-2"><%= page[:meta_label] %></span>

              <h2
                class="banner__title title-xl e-mgn-b-md e-mgn-t-xs JS-truncate"
                data-truncate="{ 'xs': 120 }"><%= page[:title] %></h2>

              <%= partial "views/partials/btn",
                locals: { local_data: {
                  type: "link", size: "md", style: "primary",
                  label: "Read more", label_size: "md",
                  url: internalURL(page[:slug]) }} %>
            </div>
          </div>
        </article>
      <% end %>


    </div>
    <div class="carousel__actions carousel__actions--banner">
      <div class="carousel__prev">
        <%= partial "views/partials/icon",
          locals: {
            icon: "chevron-left",
            size: "xs",
            color: "green" } %>

        <span>Prev</span>
      </div>
      <div class="carousel__next">
        <span>Next</span>
        <%= partial "views/partials/icon",
          locals: {
            icon: "chevron-right",
            size: "xs",
            color: "green" } %>
      </div>
    </div>

  </div>
</header>
