<% @entry = entry_data %>

<article>

  <%# Banner %>
  <%= partial "views/partials/banner/home",
    locals: { local_data: { entry_data: @entry }} %>

  <%# Introduction/mission %>
  <%= partial "views/partials/panel/introduction",
    locals: { entry_data: @entry } %>

  <%# 'Latest' carousel %>
  <%= partial "views/partials/panel/carousel",
    locals: { local_data: {
      entry_data: @entry,
      context: :latest,
      data_type: :latest,
      title: "Latest" }} %>

  <%= partial "views/partials/panel/images",
    locals: { local_data: {
      entry_data: {
        title: "Themes",
        background_color: "light-grey",
        show_title: true,
        icons: :pages
    }}} %>

  <%# Custom panels %>
  <% if @entry[:panels]
    @entry[:panels].each_with_index do |panel, index|
      bgc = panel.background_color %>

      <%# Band panel %>
      <% if panel[:TYPE] == "panel_band" %>
        <%= partial "views/partials/panel/band",
          locals: { local_data: {
            entry_data: panel,
            index: index }} %>
      <% end %>

      <%# Category panel %>
      <% if panel[:TYPE] == "panel_carousel_category" %>
        <%= partial "views/partials/panel/carousel",
          locals: { local_data: {
            entry_data: panel,
            data_type: :latest_category,
            categories: panel[:category],
            link: true,
            index: index }} %>
      <% end %>

      <%# Content panel %>
      <% if panel[:TYPE] == "panel_content" %>
        <%= partial "views/partials/panel/content",
          locals: { local_data: {
            entry_data: panel,
            index: index }} %>
      <% end %>
    <% end %>
  <% end %>
</article>
