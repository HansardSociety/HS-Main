doctype html
html

  / Head
  =partial 'views/partials/head'

  body.JS-state-global

    / SVG sprite
    = partial 'assets/images/svg/sprite.symbol.svg'

    .site-container

      / Navbar
      = partial 'views/partials/navbar'

      main
        = yield

        / Newsletter modal
        = partial 'views/partials/modal',
          locals: { local_data: \
            { id: 'modal-monthly-newsletter-subscription',
              yield: true, size: 'narrow' }}
          = siteData(:newsletter_embed)

      / Footer
      = partial 'views/partials/footer'

  / Scripts:
  / Need to be relative for uncss-jsdom
  = javascript_include_tag "#{ config[:JS_VENDOR] }", :relative => true
  = javascript_include_tag "#{ config[:JS_APP] }", :relative => true
